@model Web_Inlupp.ViewModel.ProductEditViewModel

@{
    ViewData["Title"] = "Product Edit";
}
<div class="card-body">
    <form method="post" asp-controller="ProductManager" asp-action="ProductEdit">
        <fieldset>
            <h2>Edit</h2>

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea rows="5" cols="30"
                          class="form-control" asp-for="Description">
                </textarea>
                <span asp-validation-for="Description" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="SelectCategoryId">Category</label>
                <select class="form-control"
                        asp-for="SelectCategoryId"
                        asp-items="Model.AllCategories"></select>
            </div>

            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price"></span>
            </div>

            <button class="btn btn-primary" type="submit">Save Changes</button>
            <a class="btn btn-primary" asp-controller="Shop" asp-action="ShopIndex">Cancel</a>
        </fieldset>
    </form>
</div>