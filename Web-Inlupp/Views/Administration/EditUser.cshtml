@model Web_Inlupp.ViewModel.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<div class="card-body">
    <form method="post">
        <fieldset>
            <h2>Edit</h2>

            <div class="form-group">
                <label asp-for="UserName">Name</label>
                <input class="form-control" asp-for="UserName" placeholder="Enter Username...">
                <span asp-validation-for="UserName" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" placeholder="Enter Email...">
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Current Password</label>
                <input class="form-control" asp-for="Password" placeholder="Enter current Password...">
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordChecked">Enter new Password again</label>
                <input class="form-control" asp-for="PasswordChecked" placeholder="Enter password again">
                <span asp-validation-for="PasswordChecked" class="field-validation-error"></span>
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListUser" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>