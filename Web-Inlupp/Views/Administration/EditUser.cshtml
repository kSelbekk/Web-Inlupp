@model Web_Inlupp.ViewModel.EditUserViewModel

@{
    ViewBag.Title = "Edit Role";
}

<div class="card-body">
    <form method="post" asp-controller="Administration" asp-action="EditUser">
        <fieldset>
            <h2>Edit</h2>

            <div class="form-group">
                <label asp-for="UserName">Name</label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
        </fieldset>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListUser" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
    <a class="btn btn-danger list-inline-item m-1" asp-action="DeleteUser" asp-route-Id="@Model.Id"> <i class="mr-2"></i>Delete</a>
</div>