@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "List Roles";
}

<h1>All Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-controller="Administration" asp-action="Create">Add New Role</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Role Id : @role.Id</strong>
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            There is no roles yet
        </div>
        <div class="card-body">
            <h3 class="card-title">
                Use button below to creat a role
            </h3>
            <a class="btn btn-primary" asp-controller="Administration" asp-action="Create">
                Creat role
            </a>
        </div>
    </div>
}